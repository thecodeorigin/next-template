{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "es2015",
    "paths": {
      "~/*": ["./*"],
      "~": [
        "./index.js",
        "./index.json",
        "./index.vue",
        "./index.scss",
        "./index.css"
      ],
      "~~/*": ["./*"],
      "~~": [
        "./index.js",
        "./index.json",
        "./index.vue",
        "./index.scss",
        "./index.css"
      ]
    }
  },
  "exclude": ["node_modules", ".next", "dist"]
}
